{
    "template": "graph",
    "nodes": [
        {
            "atom": {
                "name": "node",
                "variables": ["label", "color"]
            },
            "style": {
                "color": {
                    "root": "yellow",
                    "leaves": "fuchsia",
                    "nonRoot": "blue"
                }
            }
        }
    ],
    "edges": [
        {
            "atom": {
                "name": "edge",
                "variables": ["from", "to", "color"]
            },
            "style": {
                "color": "yellow",
                "oriented": false
            }
        }
    ]
}