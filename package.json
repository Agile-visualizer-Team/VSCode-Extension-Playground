{
  "name": "@Agile-visualizer-Team/agile_visualizer_matrix_visualizaton",
  "displayName": "ASP Visualizer",
  "publisher": "ASP-VISTeam1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Agile-visualizer-Team/visualizer-asp"
  },
  "description": "",
  "version": "1.4.2069",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Data Science",
    "Visualization",
    "Education"
  ],
  "activationEvents": [
    "onView:viewId.asp-vis.webview"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "asp-vis-settings",
          "title": "ASP Visualizer",
          "icon": "./icon.png"
        }
      ]
    },
    "views": {
      "asp-vis-settings": [
        {
          "type": "webview",
          "id": "asp-vis.webview",
          "name": "ASP Visualizer"
        }
      ]
    },
    "commands": [
      {
        "title": "ASP Visualizer: Render using configuration file",
        "command": "asp-vis.execute"
      },
      {
        "title": "ASP Visualizer: Convert image sequence to GIF",
        "command": "asp-vis.ffmpeg"
      }
    ]
  },
  "scripts": {
    "i:graph": "echo ##### [INSTALLING GRAPH] ##### && cd ./src/visualizer-graph && npm i",
    "i:svelte": "echo ##### [INSTALLING SVELTEKIT] ##### && cd ./src/extension-main/svelte-app && npm i",
    "i:matrix": "echo ##### [INSTALLING MATRIX] ##### && cd ./src/visualizer-matrix && npm i",
    "i:integrator": "echo ##### [INSTALLING INTEGRATOR] ##### && cd ./src/visualizer-integrator && npm i",
    "i:wrapper": "echo ##### [INSTALLING WRAPPER] ##### && cd ./src/wrapper-dlv && npm i",
    "install:all": "npm run i:graph && npm run i:matrix && npm run i:integrator && npm run i:wrapper && npm run i:svelte",
    "b:graph": "echo ##### [COMPILING GRAPH] ##### && cd ./src/visualizer-graph/ && npx tsc --outDir ../../dist/",
    "b:matrix": "echo ##### [COMPILING MATRIX] ##### && cd ./src/visualizer-matrix/ && npx tsc --outDir ../../dist/",
    "b:integrator": "echo ##### [COMPILING INTEGRATOR] ##### && cd ./src/visualizer-integrator/ && npx tsc --outDir ../../dist/",
    "b:wrapper": "echo ##### [COMPILING WRAPPER] ##### && cd ./src/wrapper-dlv/ && npx tsc --outDir ../../dist/",
    "b:webview": "echo ##### [BUILDING WEBVIEW] ##### && cd ./src/extension-main/svelte-app && npm run build",
    "build:all": "npm run b:graph && npm run b:matrix && npm run b:integrator && npm run b:wrapper",
    "compile": "npm run b:webview && py builder.py && webpack",
    "vsix": "npm run b:webview && py builder.py && webpack --mode production --devtool hidden-source-map && vsce package",
    "compile:p": "npm run b:webview && py builder.py && webpack --mode production --devtool hidden-source-map",
    "compile:l": "python3 builder.py && webpack",
    "watch": "py builder.py && webpack --watch",
    "vscode:prepublish": "",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@types/yargs": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "bufferutil": "^4.0.7",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "puppeteer-core": "^19.6.2",
    "table": "^6.8.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "utf-8-validate": "^5.0.10",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "ws": "^8.11.0"
  },
  "icon": "logo.png"
}
